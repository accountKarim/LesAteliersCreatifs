<!-- **************NAVIGATION*************** -->
{% set categories = categorie_repository.findAll() %}


<nav class="navbar navbar-expand-lg navbar-white bg-white">
    <div class="container">
    <a class="navbar-brand" href="{{ path('page_home') }}">Les Ateliers créatifs de Chadia</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarSupportedContent">
        <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav d-flex justify-content-end ">
                <li class="nav-item active mr-5">
                    <a class="nav-link" href="{{ path('page_home') }}">Home <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item mr-5">
                    <a class="nav-link" href="{{ path('biographie') }}">Biographie</a>
                </li>

                <li class="nav-item dropdown mr-5">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Galerie
                    </a>
                    <div class="dropdown-menu categories-gallerie" aria-labelledby="navbarDropdown">
                        {% for categorie in categories %}
                            <a class="p-2 dropdown-item"
                               href="{{ path('front_categorie', {'nom':categorie.nom}) }}">{{ categorie.nom }}<br></a>
                        {% endfor %}
                    </div>
                </li>

                <li class="nav-item dropdown mr-5">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Boutique
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('boutique') }}">Acquérir une oeuvre</a>
                        <a class="dropdown-item" href="{{ path('panier') }}">Panier</a>
                    </div>
                </li>

                <li class="nav-item mr-5">
                    <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                </li>

                <li class="nav-item dropdown ">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user-circle"></i>
                        {% if(app.user) %}{{ app.user.prenom }}{% endif %}
                    </a>
                    <div class="dropdown-menu compte" aria-labelledby="navbarDropdown">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="dropdown-item" href="{{ path('oeuvre_new') }}">Tableau de bord</a>
                            {% endif %}
                                <a class="dropdown-item" href="{{ path('security_profil') }}">Mon profil</a>
                                <a class="dropdown-item" href="{{ path('page_orders') }}">Mes commandes</a>
                                <a class="dropdown-item" href="{{ path('security_logout') }}">Se deconnecter</a>
                             {% else %}
                                <a class="dropdown-item" href="{{ path('security_register') }}">S'inscrire</a>
                                <a class="dropdown-item" href="{{ path('security_login') }}">Se connecter</a>
                        {% endif %}
                    </div>
                </li>
            </ul>

        </div>
    </div>
    </div>
</nav>