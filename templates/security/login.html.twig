{% extends "base.html.twig" %}

{% block body %}

    <div class="container">

        <div class="row m-5">
            <div class="col">
                <p class="text-center">Connectez-vous</p>
            </div>
        </div>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% for message in app.Flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            {{ message }}
        </div>
        {% endfor %}

        <form class=" " action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <label for="_username">Votre email :</label>
                <input class="form-control" type="email" id="email" name="_username" placeholder="Tapez votre email" value="{{ last_username }}"/>
            </div>
            <div class="form-group mt-5">
                <label for="password">Votre mot de passe :</label>
                <a href="{{ path('security_forgot') }}" class="float-right link">Mot de passe oublier ?</a>
                <input  class="form-control" type="password" id="password" name="_password" placeholder="Tapez votre mot de passe" />
            </div>
                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}
                    <button class="col-4 btn btn-primary mt-5" type="submit">Valider</button>
        </form>


{% endblock %}