{# templates/security/login.html.twig #}
{# ... you will probably extend your base template, like base.html.twig #}
{% extends "base.html.twig" %}

{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

    <div class="container">

    {{ dump(app.user) }}

        <div class="row m-5">
            <div class="col">
                <p class="text-center">Connectez-vous</p>
            </div>
        </div>

            <form class=" " action="{{ path('security_login') }}" method="post">
                <div class="form-group">
                    <label class="col-6 " for="_username">Votre email :</label>
                    <input class="form-control" type="email" id="email" name="_username" placeholder="Tapez votre email" value="{{ last_username }}"/>
                </div>
                <div class="form-group">
                    <label class="col-6" for="password">Votre mot de passe :</label>
                    <input  class="form-control" type="password" id="password" name="_password" placeholder="Tapez votre mot de passe" />
                </div>
                    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}
                        <button class="col-4 btn btn-primary" type="submit">Valider</button>
            </form>


{% endblock %}